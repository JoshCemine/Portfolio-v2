---
import type { Project } from "../data/data";
const { projects } = Astro.props as { projects: Project };
---

<a
    href={projects.github}
    target="_blank"
    rel="noopener noreferrer"
    class="glass-white gborder-white gshadow rounded-md flex flex-col w-full sm:w-46 md:w-64 md:h-84"
>
    <!-- Image container - will show on sm screens and up -->
    <div
        class="hidden sm:block h-32 md:h-42 w-full overflow-hidden bg-center bg-cover"
        style={`background-image: url(${projects.image});`}
    >
    </div>

    <!-- Content container -->
    <div class="flex flex-col justify-between p-3 text-white/90 h-full">
        <div>
            <h1 class="font-bold text-lg md:text-xl">{projects.title}</h1>
            <p class="mb-2 text-sm md:text-md">{projects.description}</p>
        </div>

        <!-- Tags container - now properly at bottom -->
        <div class="flex flex-wrap gap-1 mt-auto">
            <!-- mt-auto pushes to bottom -->
            {
                projects.tags.map((tag) => (
                    <span class="text-[0.55rem] md:text-xs px-2 py-1 bg-[#2D2327]/80 rounded-md">
                        {tag}
                    </span>
                ))
            }
        </div>
    </div>
</a>
